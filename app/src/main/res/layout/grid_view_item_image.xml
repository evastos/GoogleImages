<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.evastos.googleimages.ui.views.SquareImageView
        android:id="@+id/grid_view_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/grid_view_item_image_loading_failed_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/image_loading_error"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_view_loading_image_failed_size"
        android:visibility="gone"/>

</RelativeLayout>